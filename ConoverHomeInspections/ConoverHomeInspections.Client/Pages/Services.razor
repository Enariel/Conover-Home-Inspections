@rendermode InteractiveAuto
@page "/Services"
<PageTitle>Services - Conover Home Inspections</PageTitle>
<MainHeader Title="Services" />

<ResponsiveSplit>
	<LeftContent>
		<SectionHeader Title="Home Inspection Services" />
	</LeftContent>
	<RightContent>
		@if (_productGroups == null || !_productGroups.Any())
		{
			<MudText Typo="Typo.caption">Loading...</MudText>
		}
		else
		{
			<MudExpansionPanels Dense="false" Elevation="0" Square="true" DisableBorders="true" Class="border-b-1">
				@foreach (var group in _productGroups)
				{
					<MudExpansionPanel>
						<TitleContent>
							<MudText Typo="Typo.h6">@((MarkupString)group?.GroupName)</MudText>
						</TitleContent>
						<ChildContent>
							<MudText>@((MarkupString)group?.Description)</MudText>
						</ChildContent>
					</MudExpansionPanel>
				}
			</MudExpansionPanels>
		}
	</RightContent>
</ResponsiveSplit>

