@rendermode InteractiveAuto
@page "/Contact"
@using System.ComponentModel.DataAnnotations
<PageTitle>Contact - Conover Home Inspections</PageTitle>
<MainHeader Title="Contact" />

<EditForm Model="@_model" OnSubmit="@(async (e) => await OnContactSubmit(e))">
	<MudCard>
		<MudCardHeader>
			<CardHeaderContent>
				<MudStack>
					<MudText Color="Color.Primary" Typo="@Typo.h4" Align="Align.Center">Book your inspection now</MudText>
				</MudStack>
			</CardHeaderContent>
		</MudCardHeader>
		<MudCardContent>
			<MudGrid>
				<!-- Personal Information -->
				<MudItem xs="12">
					<MudText Typo="@Typo.h5">Personal Information</MudText>
				</MudItem>
				<MudItem sm="12" md="6">
					<MudTextField @bind-Value="@_model.FirstName" For="@(() => _model.FirstName)" Label="First Name" Required="true" RequiredError="First name is required!" />
				</MudItem>
				<MudItem sm="12" md="6">
					<MudTextField @bind-Value="@_model.LastName" For="@(() => _model.LastName)" Label="Last Name" Required="true" RequiredError="Last name is required!" />
				</MudItem>
				<MudItem sm="12" md="6">
					<MudTextField @bind-Value="@_model.Email" For="@(() => _model.Email)" Label="Email Address" Required="true" RequiredError="Email is required!" Validation="@(new EmailAddressAttribute() { ErrorMessage = "The email address is invalid" })" />
				</MudItem>
				<MudItem sm="12" md="6">
					<MudTextField @bind-Value="@_model.Phone" For="@(() => _model.Phone)" Label="Phone Number" />
				</MudItem>

				<MudItem sm="12">
					<MudGrid>
						<MudItem xs="12">
							<MudText Typo="@Typo.h6">Mailing Address</MudText>
						</MudItem>
						<MudItem xs="12" sm="6">
							<MudTextField @bind-Value="@_model.MailingAddress.Street" For="@(() => _model.MailingAddress.Street)" Label="Street" MaxLength="255" />
						</MudItem>
						<MudItem xs="12" sm="3">
							<MudTextField @bind-Value="@_model.MailingAddress.Street2" For="@(() => _model.MailingAddress.Street2)" Label="Street Ext." MaxLength="128" />
						</MudItem>
						<MudItem xs="12" sm="3">
							<MudTextField @bind-Value="@_model.MailingAddress.City" For="@(() => _model.MailingAddress.City)" Label="City" MaxLength="128" />
						</MudItem>
						<MudItem sm="12" md="6">
							<MudSelect T="string" Label="State" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Outlined">
								@foreach (var key in _stateDict.Keys.ToList())
								{
									<MudSelectItem Value="@(_stateDict[key])">@key</MudSelectItem>
								}
							</MudSelect>
						</MudItem>
						<MudItem xs="12" sm="6" md="4">
							<MudNumericField @bind-Value="@_model.MailingAddress.ZipCode" For="@(() => _model.MailingAddress.ZipCode)" Label="Zip" MaxLength="6" />
						</MudItem>
						<MudItem xs="12" sm="6" md="2">
							<MudNumericField @bind-Value="@_model.MailingAddress.Zip4" For="@(() => _model.MailingAddress.Zip4)" Label="Zip-4" MaxLength="4" />
						</MudItem>
					</MudGrid>
				</MudItem>

				<!-- Realtor Information -->
				<MudItem xs="12">
					<MudText Typo="@Typo.h5">Realtor Information</MudText>
				</MudItem>
				<MudItem sm="12" md="6">
					<MudTextField @bind-Value="@_model.RealtorFirstName" For="@(() => _model.RealtorFirstName)" Label="Realtor's First Name" />
				</MudItem>
				<MudItem sm="12" md="6">
					<MudTextField @bind-Value="@_model.RealtorLastName" For="@(() => _model.RealtorLastName)" Label="Realtor's Last Name" />
				</MudItem>
				<MudItem sm="12" md="6">
					<MudTextField @bind-Value="@_model.RealtorEmail" For="@(() => _model.RealtorEmail)" Label="Realtor's Email Address" />
				</MudItem>
				<MudItem sm="12" md="6">
					<MudTextField @bind-Value="@_model.RealtorPhone" For="@(() => _model.RealtorPhone)" Label="Realtor's Phone" />
				</MudItem>

				<!-- Inspection Information -->
				<MudItem xs="12">
					<MudText Typo="@Typo.h5">Inspection Information</MudText>
				</MudItem>
			</MudGrid>
		</MudCardContent>
		<MudCardActions>
			<MudButton DisableElevation="true" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="form-button">Submit</MudButton>
		</MudCardActions>
	</MudCard>
</EditForm>

<style>
	.form-button {
		border-radius: 0;
	}
	.form-button:hover{
		color: var(--mud-palette-white);
		border-radius: 0;
	}
</style>

