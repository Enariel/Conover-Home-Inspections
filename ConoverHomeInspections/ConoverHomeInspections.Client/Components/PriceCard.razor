@rendermode InteractiveAuto
<MudCard Elevation="0" Square="true" Class="border-solid mud-border-secondary">
	<MudCardHeader>
		<MudText Color="Color.Default" Typo="Typo.h6" GutterBottom="true" Align="Align.Center">@((MarkupString)Service?.ServiceName)</MudText>
	</MudCardHeader>
	<MudCardContent>
		<MudStack Justify="Justify.Center" Spacing="2" AlignItems="AlignItems.Center">
			<MudIcon Icon="@Icons.TwoTone.MonetizationOn" Color="Color.Success" Size="Size.Large" />
			<MudText Typo="Typo.h6" Color="Color.Default" Align="Align.Center">
				@($"{Service.Price:C2}")
			</MudText>
		</MudStack>
		<MudDivider DividerType="DividerType.Middle" Light="true"/>
		<MudStack Spacing="2">
			<MudButton OnClick="@(() => OnExpandCollapseClick())">
				@(_expanded
					  ? "Less Details"
					  : "See More")
			</MudButton>
			<MudDivider />
			<MudCollapse Expanded="_expanded">
				<MudText Typo="Typo.body1" Color="Color.Default" GutterBottom="true" Align="Align.Left">@((MarkupString)Service?.Description)</MudText>
				@if (Service.Details.Any())
				{
					<MudDivider Light="true" DividerType="DividerType.FullWidth" Class="my-2" />
					@foreach (var detail in Service.Details)
					{
						<MudText GutterBottom="true">@((MarkupString)@detail.Title)</MudText>
						<MudText GutterBottom="false">@((MarkupString)@detail.Description)</MudText>
					}
				}
			</MudCollapse>
		</MudStack>
	</MudCardContent>
	<MudCardActions Class="d-flex justify-center">
		<MudButton Color="Color.Secondary" Variant="Variant.Text" Href="@($"/Contact?groupId={Service.GroupId}&serviceId={Service.ServiceId}")" Target="_blank" Size="Size.Large" Style="width: 50%;">Schedule >></MudButton>
	</MudCardActions>
</MudCard>

