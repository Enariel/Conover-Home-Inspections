						<div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
							<MudStack>
								<MudText Typo="Typo.h1" Color="Color.Primary" Align="Align.Center">Home Inspections</MudText>
								<MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Contact" ButtonType="ButtonType.Button" DisableElevation="true" FullWidth="true" Style="border-radius: 0;">Book Now</MudButton>
							</MudStack>
						</div>
					</MudCarouselItem>
				}
			}
			else
			{
				<MudCarouselItem Color="Color.Primary" Transition="@Transition.Slide">
					<MudImage Class="kenburns-bottom" Height="600" Style="width: 100%;" Alt="A rustic house in Quarryville, PA. It's covered by the shade of a tree, the sky is gray, and the grass is green. There is a brown, wooden, patio leading up to the front door set in the center of the house's face." Src="images/quarryville_house.jpg" ObjectFit="ObjectFit.Cover" Elevation="0" ObjectPosition="ObjectPosition.Center" />
				</MudCarouselItem>
			}
		</MudCarousel>
	</MudHidden>
</MudBreakpointProvider>

