@page "/"
@using ConoverHomeInspections.Client.Components
<HeadContent>
    <PageTitle>Home Page | Conover Home Inspections</PageTitle>
    <meta name="description" content="Reliable and thorough home inspection services by Conover Home Inspections. Ensure your property is safe and secure.">
    <meta name="keywords"
          content="Home Inspection, Property Inspection, Real Estate Inspection, Tampa Bay Home Inspection, Hillsborough Home Inspection, Pasco County Home Inspection, Pinellas Home Inspection, Reliable Home Inspection, Thorough Home Inspection">
</HeadContent>

<MainSection>
    <MudText Align="Align.Center" Typo="Typo.h2">Foundations for a Confident Purchase</MudText>
</MainSection>
<MainSection>
    <MudPaper Class="py-8 mud-theme-secondary">
        <Certificates @rendermode="InteractiveAuto" />
    </MudPaper>
</MainSection>
<MainSection>
    <MudGrid Spacing="0">
        <MudItem xs="12" sm="6">
            <MudStack Class="mud-height-full" Justify="Justify.Center" AlignItems="AlignItems.Center">
                <MudText Align="Align.Center" Typo="Typo.h3">Licensed and Insured Home Inspections</MudText>
                <MudText Align="Align.Center" Typo="Typo.body1">
                    Proudly servicing the following areas
                </MudText>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudList Style="gap: 5px;">
                <MudListItem>
                    <MudCard Class="rounded-0 mud-theme-primary" Elevation="0">
                        <MudCardContent Style="color: #000;">
                            <MudText Typo="Typo.h6">Pinellas County</MudText>
                            <MudText Typo="Typo.body2">
                                Providing exceptional home inspection services in Pinellas County
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudListItem>
                <MudListItem>
                    <MudCard Class="rounded-0 mud-theme-secondary" Elevation="0">
                        <MudCardContent Style="color: #000;">
                            <MudText Typo="Typo.h6">Pasco County</MudText>
                            <MudText Typo="Typo.body2">
                                Your trusted partner for home inspections in Pasco County
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudListItem>
                <MudListItem>
                    <MudCard Class="rounded-0 mud-theme-primary" Elevation="0">
                        <MudCardContent Style="color: #000;">
                            <MudText Typo="Typo.h6">Hernando County</MudText>
                            <MudText Typo="Typo.body2">
                                Offering comprehensive property inspection services in Hernando County
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudListItem>
                <MudListItem>
                    <MudCard Class="rounded-0 mud-theme-secondary" Elevation="0">
                        <MudCardContent Style="color: #000;">
                            <MudText Typo="Typo.h6">Hillsborough County</MudText>
                            <MudText Typo="Typo.body2">
                                Ensuring safer homes with our inspection services in Hillsborough County
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudListItem>
            </MudList>
        </MudItem>
    </MudGrid>
</MainSection>
<MainSection>
    <MudContainer>
        <MudPaper Class="py-8 px-6">
            <MudStack Justify="Justify.Center" AlignItems="AlignItems.Start">
                <MudText Align="Align.Left" Typo="Typo.h3">
                    Contact us for expert inspections and detailed reports!
                </MudText>
                <MudText Align="Align.Left" Typo="Typo.body1">
                    Conover Home Inspections offers thorough home inspection services, including 4 point, wind mitigation, roof certification, manufactured home, dock, seawall and boat lift inspections. I service Pinellas, Pasco, Hernando and Hillsborough counties.
                </MudText>
                <MudButton Class="rounded-0" DisableElevation="true" Href="/Contact" Color="Color.Secondary" Variant="Variant.Filled" Size="Size.Large" EndIcon="@Icons.Material.Sharp.Send">Schedule a Consultation</MudButton>
            </MudStack>
        </MudPaper>
    </MudContainer>
</MainSection>