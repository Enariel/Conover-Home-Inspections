@page "/"
@using ConoverHomeInspections.Client.Components
<HeadContent>
    <PageTitle>Home Page | Conover Home Inspections</PageTitle>
    <meta name="description" content="Reliable and thorough home inspection services by Conover Home Inspections. Ensure your property is safe and secure.">
    <meta name="keywords"
          content="Home Inspection, Property Inspection, Real Estate Inspection, Tampa Bay Home Inspection, Hillsborough Home Inspection, Pasco County Home Inspection, Pinellas Home Inspection, Reliable Home Inspection, Thorough Home Inspection">
</HeadContent>

<MainSection>
    <MudText Align="Align.Center" Typo="Typo.h2">Foundations for a Confident Purchase</MudText>
</MainSection>
<MainSection>
    <Certificates @rendermode="InteractiveAuto" />
</MainSection>
<MainSection>
    <MudText Align="Align.Center" Typo="Typo.h3">Licensed and Insured Home Inspections</MudText>
    <MudText Align="Align.Center" Typo="Typo.body1">
        Proudly servicing the following areas
    </MudText>
    <MudList Style="gap: 5px;">
        <MudListItem>
            <MudCard Class="mud-theme-primary">
                <MudCardContent Style="color: #000;">
                    <MudText Typo="Typo.h6">Pinellas County</MudText>
                    <MudText Typo="Typo.body2">
                        Providing exceptional home inspection services in Pinellas County
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudListItem>
        <MudListItem>
            <MudCard Class="mud-theme-secondary">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Pasco County</MudText>
                    <MudText Typo="Typo.body2">
                        Your trusted partner for home inspections in Pasco County
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudListItem>
        <MudListItem>
            <MudCard Class="mud-theme-primary">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Hernando County</MudText>
                    <MudText Typo="Typo.body2">
                        Offering comprehensive property inspection services in Hernando County
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudListItem>
        <MudListItem>
            <MudCard Class="mud-theme-secondary">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Hillsborough County</MudText>
                    <MudText Typo="Typo.body2">
                        Ensuring safer homes with our inspection services in Hillsborough County
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudListItem>
    </MudList>
</MainSection>
<MainSection>
    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
    <MudText Align="Align.Center" Typo="Typo.h3">
        Contact us for expert inspections and detailed reports!
    </MudText>
    <MudButton DisableElevation="true" Href="/Contact" Color="Color.Secondary" Variant="Variant.Filled" Size="Size.Large" EndIcon="@Icons.Material.Sharp.Send">Schedule a Consultation</MudButton>
    <MudText Align="Align.Center" Typo="Typo.body1">
        Conover Home Inspections offers thorough home inspection services across Pinellas, Pasco, Hernando and Hillsborough counties
    </MudText>
    </MudStack>
</MainSection>